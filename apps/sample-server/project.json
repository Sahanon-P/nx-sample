{
  "name": "sample-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/sample-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "options": {
        "generatePackageJson": true
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "sample-server:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "sample-server:build:development"
        },
        "production": {
          "buildTarget": "sample-server:build:production"
        }
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": [
        "build"
      ],
      "options": {
        "engine": "docker",
        "platforms": [
          "linux/amd64"
        ],
        "push": true,
        "metadata": {
          "images": [
            "pazcalb/sample-server"
          ],
          "load": true,
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=match,pattern=/sample-server-(\\d+\\.\\d+\\.\\d+)(?!-)/i,group=1",
            "type=match,pattern=/sample-server-(\\d+\\.\\d+)\\.\\d+(?!-)/i,group=1",
            "type=match,pattern=/sample-server-(\\d+)\\.\\d+\\.\\d+(?!-)/i,group=1",
            "type=sha,prefix=sha-"
          ]
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "commitMessageFormat": "release({projectName}): ðŸŽ¸ cut release to {version}"
      }
    }
  },
  "tags": []
}